{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"arrow-parens": ["error", "always"],
		"object-curly-spacing": ["error", "always"],
		"comma-dangle": ["error", "never"],
		"no-console": 0
    }
}